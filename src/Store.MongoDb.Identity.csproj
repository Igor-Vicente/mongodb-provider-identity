<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  
	<PackageId>IVM.MongoDb.Identity.Provider</PackageId>
	<Version>1.0.3</Version>
	<Authors>Igor Vicente</Authors>
	<RepositoryUrl>https://github.com/Igor-Vicente/mongodb-provider-identity</RepositoryUrl>
	<PackageProjectUrl>https://github.com/Igor-Vicente/mongodb-provider-identity</PackageProjectUrl>
	<PackageDescription>Identity Custom Storage Providers</PackageDescription>
	<Description>
		Not all identity User interfaces are implement. I'm adding the interfaces and customizing it as needed.
		Identity Custom Storage Providers - https://learn.microsoft.com/pt-br/aspnet/core/security/authentication/identity-custom-storage-providers?view=aspnetcore-8.0
	</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Identity.Stores" Version="8.0.6" />
    <PackageReference Include="MongoDB.Driver" Version="2.26.0" />
  </ItemGroup>

</Project>
